<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/centerTest"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerInParent="true"
        android:background="@color/black"/>

    <TextView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@color/black"
        android:layout_above="@+id/centerTest"
        android:layout_toLeftOf="@+id/centerTest"/>

    <TextView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@color/black"
        android:layout_toRightOf="@+id/centerTest"
        android:layout_above="@+id/centerTest"/>

    <TextView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_above="@+id/centerTest"
        android:background="@color/black"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@color/black"
        android:layout_toLeftOf="@+id/centerTest"
        android:layout_alignTop="@+id/centerTest"/>

    <TextView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignTop="@+id/centerTest"
        android:background="@color/black"
        android:layout_toRightOf="@+id/centerTest"/>

    <TextView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@color/black"
        android:layout_below="@+id/centerTest"
        android:layout_toLeftOf="@+id/centerTest"/>

    <TextView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@+id/centerTest"
        android:background="@color/black"
        android:layout_alignEnd="@+id/centerTest"/>

    <TextView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@color/black"
        android:layout_toRightOf="@+id/centerTest"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/centerTest"/>


</RelativeLayout>